<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvContactDetailHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topbgbg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:singleLine="true"
        android:text="Add New Customer"
        android:textColor="@color/white"
        android:textSize="18dip"
        android:textStyle="bold" >
    </TextView>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dip"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tvCustomerName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:text="Customer Name"
                    android:textColor="@color/gray_dark"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:id="@+id/tvCustomerNameVal"
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:layout_weight="1"
                    android:background="@drawable/input_bg"
                    android:hint="Enter customer name"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:singleLine="true"
                    android:textColor="@color/gray_light"
                    android:textSize="14dip" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_margin="5dip"
                android:background="@drawable/saparetor" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tvSiteId"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:text="Customer Site Id"
                    android:textColor="@color/gray_dark"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:id="@+id/tvSiteIdVal"
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:layout_weight="1"
                    android:background="@drawable/input_bg"
                    android:gravity="center_vertical"
                    android:hint="Site Id"
                    android:paddingLeft="5dip"
                    android:singleLine="true"
                    android:textColor="@color/gray_light"
                    android:textSize="14dip" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_margin="5dip"
                android:background="@drawable/saparetor"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tvLatitude"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:text="Latitude"
                    android:textColor="@color/gray_dark"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:id="@+id/tvLatitudeDisplay"
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:layout_weight="1"
                    android:background="@drawable/input_bg"
                    android:gravity="center_vertical"
                    android:hint="Capture Latitude"
                    android:imeOptions="actionNext"
                    android:paddingLeft="5dip"
                    android:singleLine="true"
                    android:textColor="@color/gray_light"
                    android:textSize="14dip" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_margin="5dip"
                android:background="@drawable/saparetor" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tvLongitude"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:text="Longitude"
                    android:textColor="@color/gray_dark"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:id="@+id/tvLongitudeDisplay"
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:layout_weight="1"
                    android:background="@drawable/input_bg"
                    android:gravity="center_vertical"
                    android:hint="Capture Longitude"
                    android:imeOptions="actionNext"
                    android:paddingLeft="5dip"
                    android:singleLine="true"
                    android:textColor="@color/gray_light"
                    android:textSize="14dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:gravity="center_vertical|right" >

                <Button
                    android:id="@+id/btnCaptureLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_verify_click"
                    android:text="  Capture Location  "
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/basefooter"
        android:gravity="right" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_base" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginRight="5dip"
            android:background="@color/transparent"
            android:drawableLeft="@drawable/register_new"
            android:drawablePadding="5dip"
            android:text=" Update "
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>