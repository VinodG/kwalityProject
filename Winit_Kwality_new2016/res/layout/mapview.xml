<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/Layout_Top_withBtn" >

        <TextView
            android:id="@+id/tv_CompanyName"
            style="@style/TextHeaderGray"
            android:text="Winsel Aquas Pvt Ltd" />

        <TextView
            android:id="@+id/tv_Directions"
            style="@style/Btn_Green_wrap"
            android:drawableLeft="@drawable/icon1"
            android:text="Directions" />

        <TextView
            android:id="@+id/tv_checkin"
            style="@style/Btn_Green_wrap"
            android:drawableLeft="@drawable/icon2"
            android:text="Check in" />
    </LinearLayout>

    <include layout="@layout/divider_dotted" />

    <TextView
        android:id="@+id/tv_CompanyAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/greenText"
        android:textSize="18sp" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>