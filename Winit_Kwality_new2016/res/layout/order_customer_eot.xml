<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_selected"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvInventryTextEOP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:orientation="vertical"
                android:textColor="@color/gray_dark"
                >
            </TextView>

            <TextView
                android:id="@+id/tvDESCEOP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="0"
                android:textSize="12dip"
                android:textColor="@color/blue" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:src="@drawable/arro" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCodeLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/subhaederbg"
        android:gravity="center_vertical|center"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/tvCodeEOP"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight=".8"
            android:orientation="vertical"
            android:textColor="@color/white" >
        </TextView>

        <TextView
            android:id="@+id/tvCasesEOP"
            android:layout_width="55dip"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/sapare"
            android:gravity="center"
            android:text="@string/Cases"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvUnitsEOP"
            android:layout_width="56dip"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/sapare"
            android:gravity="center"
            android:text="@string/Units"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBottomLayoutEOP"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone" >
    </LinearLayout>

</LinearLayout>