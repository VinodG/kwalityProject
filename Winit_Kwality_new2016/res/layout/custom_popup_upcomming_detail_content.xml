<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvItemcode"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:background="@drawable/topbgbg"
        android:paddingLeft="10dip"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="18dip"
        android:textStyle="bold" >
    </TextView>

    <LinearLayout
        android:id="@+id/llHeaderWithTitle"
        style="@style/Layout_Top_GreenBar" >

        <ImageView
            android:id="@+id/ivSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_normal"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvOrderPreviewItemName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="Offer Item &amp; Desc."
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tvOrderPreviewCases"
            android:layout_width="33dip"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="UOM"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tvOrderPreviewunits"
            android:layout_width="36dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="QTY"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tvAvailunits"
            android:layout_width="@dimen/width_title"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Avl. Qty"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tvIsDeposite"
            android:layout_width="32dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Deposit"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tvOrderPreviewPrice"
            android:layout_width="40dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Price"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tvOrderPreviewTotalAmt"
            android:layout_width="45dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dip"
            android:gravity="center"
            android:text="@string/Total_Amt"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llProductDetailMiddleChield"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>