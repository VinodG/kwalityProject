<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvTitlePhoto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/take1"
        android:gravity="center_vertical"
        android:paddingLeft="15dip"
        android:text="Take Photo"
        android:textColor="@color/white"
        android:textSize="20dip"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:background="@drawable/take2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvFromGallery"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/from"
            android:drawablePadding="5dip"
            android:gravity="center_vertical"
            android:padding="10dip"
            android:text="From Gallery"
            android:textColor="@color/gray"
            android:textSize="18dip" />
		
        <View 
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginRight="10dip"
            android:layout_marginLeft="2dip"
            android:layout_marginTop="5dip"
            android:background="@color/white"/>
        
        <TextView
            android:id="@+id/tvFromCamera"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/cam"
            android:drawablePadding="5dip"
            android:gravity="center_vertical"
            android:padding="10dip"
            android:text="From Camera"
            android:textColor="@color/gray"
            android:textSize="18dip" />
    </LinearLayout>

</LinearLayout>