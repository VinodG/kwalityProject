<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/size20"
    android:layout_marginRight="@dimen/size20"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvDownloadPlanogramHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size5"
        android:layout_marginLeft="@dimen/size20"
        android:layout_marginRight="@dimen/size20"
        android:layout_marginTop="@dimen/size10"
        android:gravity="center"
        android:padding="@dimen/size5"
        android:singleLine="true"
        android:text="Change Password"
        android:textColor="@color/gray_dark"
        android:textSize="@dimen/text_size_extra_large"
        android:visibility="visible" />

    <include layout="@layout/divider_normal" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size10"
        android:layout_marginLeft="@dimen/size20"
        android:layout_marginRight="@dimen/size20"
        android:layout_marginTop="@dimen/size10"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvOldPasswordLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:text="Old Password"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/text_size_normal" />

            <EditText
                android:id="@+id/etOldPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/et_textfiled"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/size6"
                android:singleLine="true"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size10"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvNewPasswordLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:text="New Password"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/text_size_normal" />

            <EditText
                android:id="@+id/etNewPassword1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/et_textfiled"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/size6"
                android:singleLine="true"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size10"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvConfirmPasswordLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:text="Confirm Password"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/text_size_normal" />

            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/et_textfiled"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/size6"
                android:singleLine="true"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/size10" >

        <Button
            android:id="@+id/btnPassChange"
            style="@style/Btn_Green_wrap"
            android:layout_marginLeft="@dimen/size5"
            android:layout_weight="1"
            android:background="@drawable/okbtn"
            android:text="Submit" />

        <Button
            android:id="@+id/btnCancel"
            style="@style/Btn_Green_wrap"
            android:layout_weight="1"
            android:background="@drawable/skipbtn"
            android:text="Cancel"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>