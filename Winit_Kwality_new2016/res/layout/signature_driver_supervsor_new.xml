<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size30"
        android:layout_marginLeft="@dimen/size10"
        android:layout_marginRight="@dimen/size10"
        android:layout_marginTop="@dimen/size30"
        android:background="@drawable/round_gray_bg"
        android:orientation="vertical"
        android:padding="@dimen/size5" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/llLPO"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_10"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvLPONo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:layout_weight="1"
                    android:text="LPO No."
                    android:textColor="@color/gray_new"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtLPO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:background="@drawable/background"
                    android:padding="2dip" />


                <TextView
                    android:id="@+id/tvNarration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:layout_weight="1"
                    android:text="Narration"
                    android:textColor="@color/gray_new"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtNarration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:background="@drawable/background"
                    android:padding="2dip" />


                <LinearLayout
                    android:id="@+id/llInvoicetyp"
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                    <TextView
                        android:id="@+id/tvInvoicetype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:layout_weight="1"
                        android:text="Invoice Type"
                        android:textColor="@color/gray_new"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >



                        <LinearLayout
                            android:id="@+id/llcreditcustomer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/ivCredit"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/rbtn_h" />

                            <TextView
                                android:id="@+id/tvcustomertypeCredit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="2dip"
                                android:text="Credit"
                                android:textColor="@color/gray_new"
                                android:visibility="visible" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/llcashcustomer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/ivCash"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/rbtn_h" />

                            <TextView
                                android:id="@+id/tvcustomertypeCash"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight=".7"
                                android:padding="2dip"
                                android:text="Cash"
                                android:textColor="@color/gray_new"
                                android:visibility="visible" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llTRN"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvTRNNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"

                android:text="Customer TRN No."
                android:textColor="@color/gray_new"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtTRNNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_5"
                android:background="@drawable/background"
                android:padding="2dip" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llSR"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <LinearLayout
                android:id="@+id/llSRINO"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvSRINO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_5"

                    android:text="Original Inv. No"
                    android:textColor="@color/gray_new"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtSRINO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:background="@drawable/background"
                    android:padding="2dip" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llSRID"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/margin_10"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvSRID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"

                    android:text="Original Inv Date"
                    android:textColor="@color/gray_new"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/edtSRID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background"
                    android:hint="select Date"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_5"
                   android:drawableBottom="@drawable/seleditbg"
                    android:padding="2dip" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tvLogisticsSignature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Logistics Signature"
                    android:textColor="@color/gray_new"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnSKCear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/clear_btn"
                    android:gravity="center"
                    android:text="CLEAR"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSignSupervisor"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/size80"
                android:background="@drawable/background"
                android:orientation="horizontal"
                android:padding="2dip" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="@dimen/margin_20"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tvSalesmanSignature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Salesman Signature"
                    android:textColor="@color/gray_new"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnDriverCear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/clear_btn"
                    android:gravity="center"
                    android:text="CLEAR"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSignDriver"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/size80"
                android:background="@drawable/background"
                android:orientation="horizontal"
                android:padding="2dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_20"
            android:gravity="right"
            android:orientation="horizontal"
            android:splitMotionEvents="false" >

            <Button
                android:id="@+id/btnCancle"
                android:layout_width="@dimen/size100"
                android:layout_height="@dimen/size40"
                android:layout_marginRight="@dimen/margin_10"
                android:background="@drawable/btn_yellow"
                android:gravity="center"
                android:text="CANCEL"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnOK"
                android:layout_width="@dimen/size100"
                android:layout_height="@dimen/size40"
                android:background="@drawable/btn_green"
                android:gravity="center"
                android:text="SUBMIT"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>