<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="left"
                android:text=""
                android:textColor="#EEC679"
                android:textSize="@dimen/text_size_normal_14"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Ice Cream"
                android:textColor="#F4715F"
                android:textSize="@dimen/text_size_normal_14"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Food"
                android:textColor="@color/greenText"
                android:textSize="@dimen/text_size_normal_14"
                android:textStyle="bold" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:gravity="left"
                android:text="TPB"
                android:textColor="@color/greenText"
                android:textSize="@dimen/text_size_normal_14"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="left"
                android:text="Target"
                android:textColor="#EEC679"
                android:textSize="@dimen/text_size_normal_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTarget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:gravity="left"
                android:text="123"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFoodTarget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:gravity="left"
                android:text="123"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvTPB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:gravity="left"
                android:text="123"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="left"
                android:text="Achieved (MTD)"
                android:textColor="#EEC679"
                android:textSize="@dimen/text_size_normal_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvAchived"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:gravity="left"
                android:text="127627.00"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFoodAchived"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:gravity="left"
                android:text="127627.00"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvTPBAchived"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:gravity="left"
                android:text="127627.00"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="left"
                android:text="Short fall (MTD)"
                android:textColor="#EEC679"
                android:textSize="@dimen/text_size_normal_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvShortFall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:gravity="left"
                android:text="127627.00"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFoodShortFall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:gravity="left"
                android:text="127627.00"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvTPBShortFall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:gravity="left"
                android:text="127627.00"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="left"
                android:text="Req. Sales(P/D)"
                android:textColor="#EEC679"
                android:textSize="@dimen/text_size_normal_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvProjected"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:gravity="left"
                android:text="127627.00"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFoodProjected"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:gravity="left"
                android:text="127627.00"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvTPBProjected"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:gravity="left"
                android:text="127627.00"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <com.winit.alseer.salesman.utilities.GraphImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="visible" />

</LinearLayout>