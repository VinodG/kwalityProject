<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/llItemHeader"
        style="@style/Layout_Log_Cell_White" >

        <LinearLayout
            android:layout_width="@dimen/size95"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size5"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvCustmCodeCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="false"
                android:text="Amount"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/tvCustmCodeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5"
                android:gravity="left"
                android:singleLine="false"
                android:text="Customer"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_very_small" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_new" />

        <TextView
            android:id="@+id/tvType"
            android:layout_width="@dimen/size45"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:text="Type"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_very_small" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_new" />

        <TextView
            android:id="@+id/tvTrxNoTag"
            android:layout_width="@dimen/size80"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Doc No."
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_very_small"
            android:visibility="visible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_new" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="@dimen/size70"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="@dimen/size5"
            android:singleLine="false"
            android:text="Amount"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_new" />

        <TextView
            android:id="@+id/tvTimeStamp"
            android:layout_width="@dimen/size60"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Time Stamp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_very_small" />
    </LinearLayout>

</LinearLayout>