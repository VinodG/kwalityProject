    <!-- android:id="@+id/edtUnileverSize" -->
    <!-- android:layout_width="@dimen/size80" -->
    <!-- android:layout_height="@dimen/text_size_extra_extra_large" -->
    <!-- android:gravity="center" -->
    <!-- android:text="test" -->
    <!-- android:textColor="@color/black" /> -->

</LinearLayout>