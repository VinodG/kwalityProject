<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/Search_height"
    android:background="@drawable/searchbg"
    android:padding="@dimen/size3" >

    <ImageView
        android:id="@+id/ivSearchicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/size5"
        android:src="@drawable/vanstock_search_icon" />

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ivSearchicon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@null"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:hint="@string/search_by_item_name_desc"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_normal" />

    <ImageView
        android:id="@+id/ivSearchCross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_5"
        android:padding="@dimen/size5"
        android:src="@drawable/cross_dark"
        android:visibility="gone" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/size4"
        android:background="@drawable/edit_input" />

</RelativeLayout>