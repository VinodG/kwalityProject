<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/header_textview_gray_with_btn" />

    <LinearLayout
        android:id="@+id/llTopLayout"
        style="@style/Layout_Top_withBtn"
        android:gravity="center"
        android:padding="@dimen/margin_5"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/ivLoadReq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_5"
            android:src="@drawable/load_request_click"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ivUnLoadReq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_5"
            android:src="@drawable/unload_request_click"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ivContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/continue_click"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ivVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/verify_click"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sep_ver" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/Search_height"
        android:background="@drawable/searchbg"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/rlWareHouse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dip"
            android:layout_weight="2.3"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tvWareHouse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/size10"
                android:paddingRight="@dimen/size10"
                android:paddingTop="@dimen/size3"
                android:singleLine="true"
                android:text="Select Warehouse"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_large" >
            </TextView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size5"
                android:layout_marginTop="-5dip"
                android:background="@drawable/bankname_text_field" />
        </LinearLayout>

        <include layout="@layout/search_bar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llItemHeader"
        style="@style/Layout_Top_GreenBar" >

        <TextView
            android:id="@+id/tvItemAndDescription"
            style="@style/TextHeaderGreenBG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_15"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/size5"
            android:paddingTop="@dimen/size5"
            android:singleLine="true"
            android:text="Item Code &amp; Description"
            android:textSize="@dimen/text_size_large" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/sep_new" />

        <TextView
            android:id="@+id/tvUOM"
            style="@style/TextHeaderGreenBG"
            android:layout_width="@dimen/size50"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:text="Cases"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/sep_new"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvTotalQt"
            style="@style/TextHeaderGreenBG"
            android:layout_width="@dimen/size50"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:text="UOM"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/sep_new" />

        <TextView
            android:id="@+id/tvRecomended"
            android:layout_width="@dimen/size60"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:paddingBottom="@dimen/size5"
            android:paddingTop="@dimen/size5"
            android:text="Recm \nQty"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/sep_new" />

        <TextView
            android:id="@+id/tvQty"
            android:layout_width="@dimen/size60"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:paddingBottom="@dimen/size5"
            android:paddingTop="@dimen/size5"
            android:text="Van\nQty"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/sep_new" />

        <TextView
            android:id="@+id/tvPCS"
            android:layout_width="@dimen/size60"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:paddingBottom="@dimen/size5"
            android:paddingTop="@dimen/size5"
            android:text="Pcs"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/sep_new"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivCheckAllItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/size10"
            android:layout_marginRight="@dimen/size10"
            android:layout_weight="0"
            android:src="@drawable/check_normal"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvNoItemFound"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="@dimen/size10"
        android:text="Please tap on Load Req button to add items for load request."
        android:textColor="@color/gray_light"
        android:textSize="@dimen/text_size_large"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/svLoadStock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/llordersheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

    <ListView
        android:id="@+id/lvStockItems"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone" >
    </ListView>

</LinearLayout>