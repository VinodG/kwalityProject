<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/size10"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dove"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ivCatalogBrand"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="10dp"
                android:scaleType="fitXY" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivVideo"
            android:layout_width="90dp"
            android:layout_height="85dp"
            android:layout_centerInParent="true"
            android:background="@drawable/video_icon"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivVisited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/brands_check"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bakery_btm"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvCatalogBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size10"
            android:layout_marginTop="@dimen/size15"
            android:gravity="center"
            android:singleLine="true"
            android:text="Dairy"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>