<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvLu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topbgbg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dip"
        android:singleLine="true"
        android:text="Transfer In"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_extra_large"
        android:textStyle="bold" >
    </TextView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sapare"
        android:gravity="center_vertical"
        android:paddingBottom="5dip"
        android:paddingTop="5dip" >

        <TextView
            android:id="@+id/tvSaleman"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dip"
            android:text="Select Salesman :"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" >
        </TextView>

        <TextView
            android:id="@+id/tvSalemanValue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:background="@drawable/spinner_disabled_holo_light"
            android:gravity="center_vertical"
            android:hint="Select Salesman"
            android:paddingLeft="5dip"
            android:paddingRight="30dip"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sapare"
        android:gravity="center_vertical"
        android:paddingBottom="5dip"
        android:paddingTop="5dip" >

        <TextView
            android:id="@+id/tvEmpNo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dip"
            android:text="Select Vehicle :"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" >
        </TextView>

        <TextView
            android:id="@+id/tvEmpNoValue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:background="@drawable/spinner_disabled_holo_light"
            android:gravity="center_vertical"
            android:hint="Select Vehicle"
            android:paddingLeft="5dip"
            android:paddingRight="30dip"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCode"
        style="@style/Layout_Top_GreenBar" >

        <TextView
            android:id="@+id/tvCode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:orientation="vertical"
            android:text="@string/itemcode"
            android:textColor="@color/white" >
        </TextView>

        <TextView
            android:id="@+id/tvCases"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/sapare"
            android:gravity="center"
            android:text="@string/Cases"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvUnits"
            android:layout_width="60dip"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/sapare"
            android:gravity="center"
            android:text="@string/Units"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvNoOrder"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/No_previous_order"
        android:textColor="@color/gray"
        android:textSize="18dip"
        android:visibility="gone" />

</LinearLayout>