<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:padding="5dip" >

    <EditText
        android:id="@+id/edtNoteDetailLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignTop="@+id/imageView1"
        android:layout_weight="1"
        android:background="#00000000"
        android:drawableBottom="@drawable/enter_currency_field"
        android:drawablePadding="-5dip"
        android:gravity="center"
        android:hint="Enter Currency Note"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:textSize="@dimen/text_size_normal" >
    </EditText>

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/edtNoteDetailLeft"
        android:layout_alignTop="@+id/edtNoteDetailLeft"
        android:src="@drawable/btn_delete_click" />

</RelativeLayout>