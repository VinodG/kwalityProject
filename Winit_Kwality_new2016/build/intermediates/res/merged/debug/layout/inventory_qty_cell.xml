<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/cell_bg"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_5" >

        <LinearLayout
            android:id="@+id/llClickToDownLoad"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="2dp" >

            <TextView
                android:id="@+id/tvItemCodeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/greenText"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/gray_dark"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tvUnitPrecase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/gray_dark"
                android:textSize="10dp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvOpeningPcs"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/line_5"
            android:gravity="center"
            android:hint="0"
            android:maxLength="5"
            android:visibility="visible"
            android:singleLine="true"
            android:text="100"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLoadedPcs"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/line_5"
            android:gravity="center"
            android:hint="0"
            android:maxLength="5"
            android:singleLine="true"
            android:text="100"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvOrderQtyList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:drawableLeft="@drawable/line_5"
            android:gravity="center"
            android:hint="0"
            android:maxLength="7"
            android:singleLine="true"
            android:text="25"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSchemeQtyList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/line_5"
            android:gravity="center"
            android:hint="0"
            android:maxLength="7"
            android:visibility="gone"
            android:singleLine="true"
            android:text="03"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvFocPcs"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:drawableLeft="@drawable/line_5"
            android:gravity="center"
            android:hint="0"
            android:maxLength="7"
            android:singleLine="true"
            android:text="02"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvAvailPcs"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/line_5"
            android:gravity="center"
            android:hint="0"
            android:maxLength="7"
            android:singleLine="true"
            android:text="70"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivCheckItems"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/approved"
            android:src="@drawable/check_normal"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>