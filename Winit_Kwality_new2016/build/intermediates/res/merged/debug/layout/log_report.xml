<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/header_textview_gray_with_btn" />

    <LinearLayout
        android:id="@+id/llTopLayout"
        style="@style/Layout_Top_withBtn"
        android:gravity="left|center_vertical" >

        <LinearLayout
            android:id="@+id/llDateFilterTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvToDateTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:text="To :"
                android:textColor="@color/text_color_dark"
                android:textSize="@dimen/text_size_small" />

            <LinearLayout
                android:id="@+id/llto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size10"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_5"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/tvToDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Select end date"
                        android:textColor="@color/text_color_normal"
                        android:textSize="@dimen/text_size_normal" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_10"
                        android:background="@drawable/cal_black" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bankname_text_field" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMfdToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/ivMtd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mtd_unselect" />

            <ImageView
                android:id="@+id/ivToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/today_select" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/divider_dotted" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/schedule_call_bg"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/margin_7" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvTotalScheduledCalls"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Total Scheduled Calls"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvTotalScheduledCallsValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvTotalActualCalls"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Total Actual Calls"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvTotalActualCallsValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvTotalProductiveCalls"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Total Productive Calls"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvTotalProductiveCallsValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:layout_weight="1"
            android:background="@drawable/actual_call_bg"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/margin_7" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvTotalSales"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Total Sales"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|right"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="AED "
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_very_small"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvTotalSalesValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="10"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_large"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvTotalCreditNotes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Total Credit Notes"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|right"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="AED "
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_very_small"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvTotalCreditNotesValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="10"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_large"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvCollectionReceived"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Collection Received"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|right"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="AED "
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_very_small"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvCollectionReceivedValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="10"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_large"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/size150"
            android:layout_height="wrap_content"
            android:background="@drawable/covrage_percentage_bg"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/margin_7"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tvCurrentMonthSales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:gravity="center_vertical"
                android:text="Current Month Sales"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom|right"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="AED "
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_very_small"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvCurrentMonthSalesValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sep_ver" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/Search_height"
        android:background="@drawable/searchbg"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/rlWareHouse"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dip"
            android:layout_weight="2.3"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tvWareHouse"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/size10"
                android:paddingRight="@dimen/size10"
                android:paddingTop="@dimen/size3"
                android:singleLine="true"
                android:text="Select Warehouse"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_large" >
            </TextView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size5"
                android:layout_marginTop="-5dip"
                android:background="@drawable/bankname_text_field" />
        </LinearLayout>

        <include layout="@layout/search_bar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llItemHeader"
        style="@style/Layout_Top_GreenBar" >

        <TextView
            android:id="@+id/tvCustmCodeNameTag"
            android:layout_width="@dimen/size100"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/size5"
            android:singleLine="true"
            android:text="Code/Name"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_new" />

        <TextView
            android:id="@+id/tvType"
            android:layout_width="@dimen/size45"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:text="Type"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_new" />

        <TextView
            android:id="@+id/tvTrxNoTag"
            android:layout_width="@dimen/size80"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Doc No."
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal"
            android:visibility="visible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_new" />

        <LinearLayout
            android:layout_width="@dimen/size70"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="false"
                android:text="Amount"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:layout_width="@dimen/size70"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size5"
                android:gravity="center"
                android:singleLine="false"
                android:text="AED"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_very_small" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_new" />

        <TextView
            android:id="@+id/tvTimeStamp"
            android:layout_width="@dimen/size60"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="false"
            android:text="Time Stamp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>

<!--     <include layout="@layout/log_report_item" /> -->

    <TextView
        android:id="@+id/tvNoItemFound"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="@dimen/size10"
        android:text="No Transactions found."
        android:textColor="@color/gray_light"
        android:textSize="@dimen/text_size_large"
        android:visibility="gone" />

    <ListView
        android:id="@+id/lvStockItems"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:visibility="gone" >
    </ListView>

</LinearLayout>