<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/roundcornerpopup"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvTaskHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size10"
        android:layout_weight="1"
        android:text="Do you want to perform Store Check?"
        android:textColor="@color/text_highlighted"
        android:textSize="@dimen/text_size_extra_extra_extra_large" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dot_seperator" />

    <LinearLayout
        android:id="@+id/llStoreCheck"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size10"
            android:background="@drawable/capture"
            android:contentDescription="@string/app_name" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size10"
            android:layout_weight="1"
            android:text="Store Check"
            android:textColor="@color/text_color_dark"
            android:textSize="@dimen/text_size_extra_large" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size10"
            android:background="@drawable/task_popup_arrow"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:background="@drawable/dot_seperator"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:id="@+id/llCaptureInventory"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size10"
            android:background="@drawable/capture"
            android:contentDescription="@string/app_name" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size10"
            android:layout_weight="1"
            android:text="Capture Inventory"
            android:textColor="@color/text_color_dark"
            android:textSize="@dimen/text_size_extra_large" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size10"
            android:background="@drawable/task_popup_arrow"
            android:contentDescription="@string/app_name" />
    </LinearLayout>
<ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:background="@drawable/dot_seperator"
        android:contentDescription="@string/app_name" />
    <Button
        android:id="@+id/btnSkip"
        android:layout_width="@dimen/size250"
        android:layout_height="@dimen/size50"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginBottom="@dimen/margin_15"
        android:background="@drawable/btn_green"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/text_size_extra_large"
        android:textColor="@color/white"
        android:text="Skip"
        android:textStyle="bold" />

</LinearLayout>