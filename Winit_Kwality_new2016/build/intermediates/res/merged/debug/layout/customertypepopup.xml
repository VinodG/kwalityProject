<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size10"
    android:background="@drawable/roundcornerpopup"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvTaskHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size10"
        android:layout_weight="1"
        android:padding="10dp"
        android:text="Please select Customer type:"
        android:textColor="@color/text_highlighted"
        android:textSize="@dimen/text_size_extra_large" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dot_seperator" />

    <LinearLayout
        android:id="@+id/ll3percent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/size10"
            android:background="@drawable/customer_info"
            android:contentDescription="@string/app_name"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvDisc3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size10"
            android:layout_weight="1"
            android:text="Cash Customer"
            android:textColor="@color/text_color_dark"
            android:textSize="@dimen/text_size_extra_large" />

        <ImageView
            android:id="@+id/ivSelected3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size10"
            android:background="@drawable/rbtn_h" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:background="@drawable/dot_seperator"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:id="@+id/ll5percent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/size10"
            android:background="@drawable/customer_info"
            android:contentDescription="@string/app_name"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvDisc5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size10"
            android:layout_weight="1"
            android:text="Credit Customer"
            android:textColor="@color/text_color_dark"
            android:textSize="@dimen/text_size_extra_large" />

        <ImageView
            android:id="@+id/ivSelected5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size10"
            android:background="@drawable/rbtn_h" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:background="@drawable/dot_seperator"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:id="@+id/llValue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size10"
            android:background="@drawable/discount_icon"
            android:contentDescription="@string/app_name"
            android:visibility="visible" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size10"
            android:layout_weight="1"
            android:text="Rate Diff"
            android:textColor="@color/text_color_dark"
            android:textSize="@dimen/text_size_extra_large" />

        <TextView
            android:id="@+id/tvPrvsValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size10"
            android:contentDescription="@string/app_name"
            android:text="" />

        <ImageView
            android:id="@+id/ivSelectedVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size10"
            android:background="@drawable/rbtn_h" />
    </LinearLayout>

    

    <LinearLayout
        android:id="@+id/llClear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvClear"
            style="@style/Btn_Green_wrap"
            android:visibility="gone"
            android:layout_margin="@dimen/size3"
            android:gravity="center"
            android:text="Clear" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size10"
        android:background="@drawable/dot_seperator"
        android:contentDescription="@string/app_name" />

</LinearLayout>