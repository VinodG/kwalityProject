<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llCellClick"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/size10"
        android:paddingLeft="@dimen/margin_5"
        android:paddingTop="@dimen/size10" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvProductKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_5"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_10"
                android:singleLine="true"
                android:text="CF"
                android:textColor="@color/kwality_blue"
                android:textSize="@dimen/text_size_extra_large"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_10" >

                <TextView
                    android:id="@+id/tvVendorName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_5"
                    android:paddingBottom="@dimen/margin_5"
                    android:maxLines="2"
                    android:text="BARS COLA FRUITTI (65ml X 24pcs)"
                    android:textColor="@color/kwality_black"
                    android:textSize="@dimen/text_size_normal"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tvExpiryDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="Expiry : "
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_small"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvExpiryDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_small"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvItemBatchCodeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:text="Batch No "
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_size_small"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvItemBatchCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_small"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_hor"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etUOM"
            android:layout_width="@dimen/size50"
            android:layout_height="fill_parent"
            android:background="@null"
            android:gravity="center"
            android:hint="0"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:maxLength="5"
            android:nextFocusDown="@+id/etInvoice2"
            android:singleLine="true"
            android:textColor="@color/kwality_dark_grey"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_hor" />

        <TextView
            android:id="@+id/tvRecomendedLoad"
            android:layout_width="@dimen/size60"
            android:layout_height="fill_parent"
            android:background="@null"
            android:ellipsize="start"
            android:gravity="center"
            android:hint="0"
            android:maxLength="5"
            android:nextFocusDown="@+id/etInvoice2"
            android:singleLine="true"
            android:textColor="@color/kwality_dark_grey"
            android:textSize="@dimen/text_size_extra_large"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_hor" />

        <EditText
            android:id="@+id/etUNIT"
            android:layout_width="@dimen/size60"
            android:layout_height="fill_parent"
            android:background="@null"
            android:ellipsize="start"
            android:gravity="center"
            android:hint="0"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="5"
            android:nextFocusDown="@+id/etInvoice2"
            android:singleLine="true"
            android:textColor="@color/kwality_dark_grey"
            android:textSize="@dimen/text_size_extra_large"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_hor" />

        <EditText
            android:id="@+id/etQt"
            android:layout_width="@dimen/size60"
            android:layout_height="fill_parent"
            android:background="@null"
            android:gravity="center"
            android:hint="0"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:maxLength="5"
            android:nextFocusDown="@+id/etInvoice2"
            android:singleLine="true"
            android:textColor="@color/kwality_dark_grey"
            android:textSize="@dimen/text_size_extra_large"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etTotalQt"
            android:layout_width="52dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="1dip"
            android:background="@drawable/unit_bg"
            android:ellipsize="start"
            android:gravity="center"
            android:hint="0"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="5"
            android:nextFocusDown="@+id/etInvoice2"
            android:singleLine="true"
            android:textColor="@color/gray_dark"
            android:textSize="15dip"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/etInvoice1"
            android:layout_width="60dip"
            android:layout_height="fill_parent"
            android:background="@drawable/unit_bg"
            android:gravity="center"
            android:hint="00"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="5"
            android:nextFocusDown="@+id/etInvoice2"
            android:singleLine="true"
            android:textColor="@color/gray_dark"
            android:textSize="15dip"
            android:textStyle="bold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivAcceptCheckItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="0"
            android:src="@drawable/check_normal"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:visibility="gone"
        android:background="@color/listview_divider_new" 
        />

</LinearLayout>