<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvLu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topbgbg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:layout_weight="0"
        android:singleLine="true"
        style="@style/TextHeaderLarge"
        android:textStyle="bold" >
    </TextView>

    <LinearLayout
        style="@style/Layout_Top_GreenBar" >

        <TextView
            android:id="@+id/tvCI"
            android:layout_width="fill_parent"
            android:layout_height="35dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:text="@string/Capture_Inventory"
            android:textColor="@color/white"
            android:textSize="18dip" >
        </TextView>

        <TextView
	        android:id="@+id/tvSynchPromotion"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:orientation="vertical"
	        android:text="Sync"
	        android:drawableLeft="@drawable/refresh_list"
	        android:textColor="@color/white"
	        android:textSize="14dip"
	        android:drawablePadding="5dip"
	        android:visibility="gone"/>
        <ImageView
            android:id="@+id/ivBrands"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/brands"
            android:drawablePadding="5dip"
            android:visibility="gone" >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llItemHeader"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:background="@drawable/topbgbg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tvItemCode"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".9"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:singleLine="true"
            android:text="@string/Item_Code_Description"
            android:textColor="@color/white"
            android:textSize="12dip" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_new" />

        <TextView
            android:id="@+id/tvCases"
            android:layout_width="65dip"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:text="UOM"
            android:textColor="@color/white"
            android:textSize="12dip"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_new"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvUnits"
            android:layout_width="65dip"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:text="Qty"
            android:textColor="@color/white"
            android:textSize="12dip"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_new"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivCheckAllItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="0"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:src="@drawable/check_normal"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvNoOrder"
        android:layout_width="fill_parent"
        android:layout_height="200dip"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/No_previous_order"
        android:textColor="@color/gray"
        android:textSize="18dip"
        android:visibility="gone" />

</LinearLayout>