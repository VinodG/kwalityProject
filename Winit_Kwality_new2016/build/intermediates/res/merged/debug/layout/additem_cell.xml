<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llAddItem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_selected"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tvItemcode"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="@dimen/size10"
            android:text="@string/Item_Code"
            android:textColor="@color/white"
            android:textSize="@dimen/size16" />

        <TextView
            android:id="@+id/tvItem_Description"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="right|center"
            android:layout_marginLeft="2dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingRight="@dimen/size10"
            android:text="@string/Item_Description"
            android:textColor="@color/white"
            android:textSize="@dimen/size16" />

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/size10"
            android:src="@drawable/arro"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llItemDetail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone" >
    </LinearLayout>

</LinearLayout>