<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_10" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/agency_logo" />

                <!-- <TextView -->
                <!-- android:id="@+id/tvMasafiLogoTitle" -->
                <!-- android:layout_width="fill_parent" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:layout_marginLeft="5dip" -->
                <!-- android:text="Unilever Trading Agencies" -->
                <!-- android:textColor="@color/black" -->
                <!-- android:textSize="@dimen/text_size_large" > -->
                <!-- </TextView> -->

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_weight="1"
                    android:text="@string/alseer_address"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small" >
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvMasafiLogoTitleCustomer"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin_2"
                    android:text="@string/alseer_title"
                    android:textColor="@color/green_dark"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" >
                </TextView>

                <TextView
                    android:id="@+id/tvAddressCustomer"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="@string/alseer_address"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_small" >
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llHeaderWithTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffcc66"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tvOrderPreviewItemName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="9dip"
            android:paddingTop="5dp"
            android:text="Item Code &amp; Description"
            android:textColor="@color/black_header"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_hor" />

        <LinearLayout
            android:id="@+id/llItemUOM"
            android:layout_width="@dimen/size30"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/margin_2"
            android:layout_marginRight="@dimen/margin_2"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tvItemUOM"
                android:layout_width="@dimen/size30"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="UOM"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:layout_width="@dimen/size30"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="AED"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_very_small"
                android:visibility="invisible" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_hor" />

        <LinearLayout
            android:id="@+id/llOrderPreviewunits"
            android:layout_width="@dimen/size40"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="2dp" >

            <TextView
                android:id="@+id/tvOrderPreviewunits"
               android:layout_width="@dimen/size40"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Qty"
                android:textColor="@color/black_header"
                android:textSize="@dimen/text_size_very_small"
                android:textStyle="bold" />

            <TextView
                android:layout_width="@dimen/size40"
                android:layout_height="wrap_content"
                android:gravity="right|bottom"
                android:paddingBottom="@dimen/margin_2"
                android:paddingRight="@dimen/margin_5"
                android:text="(AED)"
                android:textColor="@color/black_header"
                android:textSize="@dimen/text_size_very_very_small"
                android:visibility="invisible" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_hor" />

        <LinearLayout
            android:id="@+id/llPrice"
            android:layout_width="@dimen/size40"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="2dp" >

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="@dimen/size38"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Price"
                android:textColor="@color/black_header"
                android:textSize="@dimen/text_size_very_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPriceUnit"
                android:layout_width="@dimen/size40"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_5"
                android:paddingRight="@dimen/margin_5"
                android:text="(AED)"
                android:textColor="@color/black_header"
                android:textSize="@dimen/text_size_very_very_small" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_hor" />

        <LinearLayout
            android:id="@+id/llTotalPrice"
            android:layout_width="@dimen/size40"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="2dp" >

            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="@dimen/size38"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="GSV"
                android:textColor="@color/black_header"
                android:textSize="@dimen/text_size_very_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTotalPriceUnit"
                android:layout_width="@dimen/size40"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_5"
                android:text="(AED)"
                android:textColor="@color/black_header"
                android:textSize="@dimen/text_size_very_very_small" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_hor" />

        <LinearLayout
            android:id="@+id/llDiscount"
            android:layout_width="@dimen/size40"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="2dp" >

            <TextView
                android:id="@+id/tvDiscount"
                android:layout_width="@dimen/size38"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Disc"
                android:textColor="@color/black_header"
                android:textSize="@dimen/text_size_very_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDiscountUnit"
                android:layout_width="@dimen/size40"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_5"
                android:text="(AED)"
                android:textColor="@color/black_header"
                android:textSize="@dimen/text_size_very_very_small" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_hor" />

        <LinearLayout
            android:id="@+id/llInvoiceAmount"
            android:layout_width="@dimen/size40"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="2dp" >

            <TextView
                android:id="@+id/tvInvoiceAmount"
                android:layout_width="@dimen/size38"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="NIV"
                android:textColor="@color/black_header"
                android:textSize="@dimen/text_size_very_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvInvoiceAmountUnit"
                android:layout_width="@dimen/size40"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_5"
                android:text="(AED)"
                android:textColor="@color/black_header"
                android:textSize="@dimen/text_size_very_very_small" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_hor" />
    </LinearLayout>

</LinearLayout>