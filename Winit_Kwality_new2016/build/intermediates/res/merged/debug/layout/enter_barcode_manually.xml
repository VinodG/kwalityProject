<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/popup_roundcorner"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:gravity="center"
            android:text="Verify Barcode"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/text_size_large" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@drawable/divideline1" />

        <EditText
            android:id="@+id/etBarcode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@drawable/input_bg"
            android:hint="Enter barcode"
            android:password="true"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/text_size_normal" />

        <EditText
            android:id="@+id/etVerifyBarcode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@drawable/input_bg"
            android:hint="Re-enter barcode"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/text_size_normal" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:gravity="center" >

            <Button
                android:id="@+id/btnVerify"
                style="@style/Btn_Green"
                android:text="Verify" />

            <Button
                android:id="@+id/btnCancel"
                style="@style/Btn_Green"
                android:text="Cancel" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>