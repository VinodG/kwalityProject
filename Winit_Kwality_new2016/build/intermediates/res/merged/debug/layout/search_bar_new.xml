<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/Search_height"
    android:background="@drawable/dark_light_bg_new"
    android:padding="@dimen/size3" >

    <ImageView
        android:id="@+id/ivSearchicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/search_icon_white_new" />

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ivSearchicon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/search_by_item_code"        
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal" />

    <ImageView
        android:id="@+id/ivSearchCross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_5"
        android:padding="@dimen/size5"
        android:src="@drawable/cross_dark"
        android:visibility="gone" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/size10"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/seach_bg_white_new" />

</RelativeLayout>