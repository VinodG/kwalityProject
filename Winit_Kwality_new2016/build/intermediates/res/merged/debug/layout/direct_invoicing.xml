<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/Layout_Top_withBtn" >

        <TextView
            style="@style/TextHeaderGray"
            android:text="Direct Invoicing" />

        <TextView
            android:id="@+id/tvAddItem"
            style="@style/Btn_Green_wrap"
            android:drawableLeft="@drawable/add"
            android:text="Add item" />

        <TextView
            android:id="@+id/tvPayment"
            style="@style/Btn_Green_wrap"
            android:drawableLeft="@drawable/check5"
            android:text="Payment" />
    </LinearLayout>

    <EditText
        android:id="@+id/etCutsmerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:hint="Name"
        android:textColorHint="@color/white"
        android:textSize="@dimen/text_size_normal" />

    <LinearLayout
        style="@style/Layout_Top_GreenBar" >

        <TextView
            style="@style/TextHeaderGreenBG"
            android:layout_weight=".6"
            android:text="Item Code &amp; Item Name" />

        <TextView
            style="@style/TextHeaderGreenBG"
            android:layout_weight=".2"
            android:text="Cases" />

        <TextView
            style="@style/TextHeaderGreenBG"
            android:layout_weight=".2"
            android:text="PCs" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvOrderDetails"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topbg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total value :"
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tvOrderAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs1600.00"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>