<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llTopLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvItemPriceHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:singleLine="true"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/text_size_extra_extra_large"
            android:visibility="visible" >
        </TextView>

        <LinearLayout
            android:id="@+id/llItemprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dip"
            android:paddingLeft="3dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip" >

            <Button
                android:id="@+id/btnitempricefinish"
                style="@style/Btn_Green_wrap"
                android:background="@drawable/btn"
                android:drawableLeft="@drawable/icon_submit_big"
                android:drawableRight="@drawable/arrow_grey"
                android:gravity="center_vertical"
                android:text="Finish"
                android:textColor="@color/gray_dark"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sep_ver" />

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topbgbg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/tvCatagories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/dropdwn2"
            android:gravity="center"
            android:hint="Select Category"
            android:orientation="vertical"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/text_size_normal" />

        <include layout="@layout/search_bar_dark_new" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llItemHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvDescription"
            style="@style/TextHeaderGreenBG"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_weight=".9"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/Item_Code_Description" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_new" />

        <TextView
            android:id="@+id/tvDescription2"
            style="@style/TextHeaderGreenBG"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_weight=".9"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="DESCRIPTION"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_new"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvUOM"
            style="@style/TextHeaderGreenBG"
            android:layout_width="@dimen/size50"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:text="Cases"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_new"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvTotalQt"
            style="@style/TextHeaderGreenBG"
            android:layout_width="@dimen/size70"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:text="UOM"
            android:visibility="gone" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_new"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="@dimen/size120"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/tvQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Price"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(AED)"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_very_very_small" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/sep_new" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvQtyEA"
                    style="@style/TextHeaderGreenBG"
                    android:layout_width="@dimen/size50"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="PCS" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="@drawable/sep_new" />

                <TextView
                    android:id="@+id/tvQtyCS"
                    style="@style/TextHeaderGreenBG"
                    android:layout_width="@dimen/size50"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="UNIT" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/sep_new"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ivCheckAllItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/size10"
            android:layout_marginRight="@dimen/size10"
            android:layout_weight="0"
            android:src="@drawable/check_normal"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvNoItemFound"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="@dimen/size10"
        android:text=""
        android:textColor="@color/gray_light"
        android:textSize="@dimen/text_size_large"
        android:visibility="gone" />

    <ListView
        android:id="@+id/lvItemsprice"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:scrollbars="none"
        android:visibility="visible" >
    </ListView>

</LinearLayout>