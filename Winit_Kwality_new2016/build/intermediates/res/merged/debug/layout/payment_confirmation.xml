<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/popup_roundcorner"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/tvPopupTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size5"
            android:layout_marginLeft="@dimen/size20"
            android:layout_marginRight="@dimen/size20"
            android:layout_marginTop="@dimen/size10"
            android:padding="@dimen/size5"
            android:singleLine="true"
            android:text="Confirmation"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/text_size_extra_large"
            android:visibility="visible" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dot_divider" />
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_5"
            android:background="@drawable/checkstore" />
        
        <TextView
            android:id="@+id/tvPopupMsg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size20"
            android:layout_marginRight="@dimen/size20"
            android:layout_marginTop="@dimen/size10"
            android:singleLine="true"
            android:gravity="center"
            android:text="Payment"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/text_size_extra_large" />
        <TextView
            android:id="@+id/tvPopupMsg2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size5"
            android:layout_marginLeft="@dimen/size20"
            android:layout_marginRight="@dimen/size20"
            android:singleLine="true"
            android:gravity="center"
            android:text="Successful!"
            android:textColor="@color/gray_dark"
            android:textSize="@dimen/text_size_extra_large_30" />
    </LinearLayout>
</LinearLayout>