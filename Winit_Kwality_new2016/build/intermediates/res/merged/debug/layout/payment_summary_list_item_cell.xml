<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/download"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_payment_summary_list_item"
    android:paddingLeft="@dimen/margin_payment_summary_list_item"
    android:paddingRight="@dimen/margin_payment_summary_list_item"
    android:paddingTop="@dimen/margin_10" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvReceiptNO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_normal"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:id="@+id/tvReceiptNOValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_dark"
                    android:textSize="@dimen/text_size_extra_large" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/tvCashAmountHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash Amount: "
                    android:textColor="@color/text_color_normal"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dip"
                    android:text="AED "
                    android:textColor="#B1B1B1"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvCashAmount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="asadsafa"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_large" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_dark"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_2"
            android:gravity="right"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvCouponNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="CP1500"
                android:textColor="@color/yellow_bg"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvTotalInvoiceAmountTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:singleLine="true"
                android:text="Total Amount"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/text_size_normal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dip"
                    android:text="AED"
                    android:textColor="@color/text_color_normal"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTotalInvoiceAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/margin_5"
                    android:singleLine="true"
                    android:text="15000.00"
                    android:textColor="@color/text_color_dark"
                    android:textSize="@dimen/text_size_very_large"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_10" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Date: "
            android:textColor="@color/text_color_normal"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/tvPaymentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_weight="1"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_color_dark" />

        <ImageView
            android:id="@+id/ivPrintReceipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="@dimen/margin_8"
            android:src="@drawable/print_conf" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/llInvoiceAmmountLabelSale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/green_bar"
                android:paddingBottom="@dimen/margin_5"
                android:paddingLeft="@dimen/margin_10"
                android:paddingRight="@dimen/margin_10"
                android:paddingTop="@dimen/margin_5" >

                <TextView
                    android:id="@+id/tvInvoiceAmmountLabelSale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:singleLine="true"
                    android:text="Invoice No"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/tvInvoiceNumberLabelSale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:singleLine="true"
                    android:text="Amount"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llInvoiceDetailsSale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

            <ImageView
                android:id="@+id/ivLineCheckTopBar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/alserr_line_green" />

            <LinearLayout
                android:id="@+id/llCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llInvoiceAmmountLabelReturn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/yellow_bg"
                android:padding="@dimen/margin_5"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/tvInvoiceAmmountLabelReturn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:singleLine="true"
                    android:text="Invoice No"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/tvInvoiceNumberLabelReturn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:singleLine="true"
                    android:text="Amount"
                    android:textColor="@color/gray_dark"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llInvoiceDetailsReturn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_5"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>