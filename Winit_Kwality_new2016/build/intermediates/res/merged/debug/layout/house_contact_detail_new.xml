<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvcustomerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Add New Customer"
            android:textColor="#323232"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnContinueToPayment"
            style="@style/Btn_Green_wrap"
            android:layout_margin="10dp"
            android:background="@drawable/btn_submit"
            android:drawableLeft="@drawable/register"
            android:text="" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/dot_seperator" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/contactbg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:text="Outlet Name"
                android:textColor="#9B9B9B"
                android:textSize="@dimen/text_size_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/etCustomerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@null"
                    android:hint="Enter Outlet Name"
                    android:inputType="textCapSentences"
                    android:textColor="#3B3B3B"
                    android:textColorHint="#3B3B3B"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:contentDescription="@string/approved"
                    android:src="@drawable/edit_input" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvContactPerson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Contact Person"
                android:textColor="#9B9B9B"
                android:textSize="@dimen/text_size_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/etContactPerson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@null"
                    android:hint="Enter Contact Person Name"
                    android:inputType="textCapSentences"
                    android:textColor="#3B3B3B"
                    android:textColorHint="#3B3B3B"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:contentDescription="@string/approved"
                    android:src="@drawable/edit_input" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvMobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Mobile Number"
                android:textColor="#9B9B9B"
                android:textSize="@dimen/text_size_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/etMobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@null"
                    android:hint="Enter Mobile No"
                    android:inputType="phone"
                    android:textColor="#3B3B3B"
                    android:textColorHint="#3B3B3B"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:contentDescription="@string/approved"
                    android:src="@drawable/edit_input" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvRegion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Region"
                android:textColor="#9B9B9B"
                android:textSize="@dimen/text_size_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/etRegion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-10dp"
                    android:layout_marginLeft="30dp"
                    android:background="@null"
                    android:focusable="false"
                    android:hint="Enter Region"
                    android:textColor="#3B3B3B"
                    android:textColorHint="#3B3B3B"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:contentDescription="@string/approved"
                    android:src="@drawable/seleditbg" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvLandline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Landline"
                android:textColor="#9B9B9B"
                android:textSize="@dimen/text_size_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/etLandline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@null"
                    android:hint="Enter Landline No"
                    android:inputType="phone"
                    android:textColor="#3B3B3B"
                    android:textColorHint="#3B3B3B"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:contentDescription="@string/approved"
                    android:src="@drawable/edit_input" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvOutLetType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Outlet Type"
                android:textColor="#9B9B9B"
                android:textSize="@dimen/text_size_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/tvOutLetTypeVal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-10dp"
                    android:layout_marginLeft="30dp"
                    android:background="@null"
                    android:focusable="false"
                    android:hint="Select Outlet Type"
                    android:textColor="#3B3B3B"
                    android:textColorHint="#3B3B3B"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:contentDescription="@string/approved"
                    android:src="@drawable/seleditbg" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Country"
                android:textColor="#9B9B9B"
                android:textSize="@dimen/text_size_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/etCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-10dp"
                    android:layout_marginLeft="30dp"
                    android:background="@null"
                    android:focusable="false"
                    android:hint="Select Country Name"
                    android:textColor="#3B3B3B"
                    android:textColorHint="#3B3B3B"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:contentDescription="@string/approved"
                    android:src="@drawable/seleditbg" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvChannel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Channel"
                android:textColor="#9B9B9B"
                android:textSize="@dimen/text_size_normal"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <EditText
                    android:id="@+id/etChannel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-10dp"
                    android:layout_marginLeft="30dp"
                    android:background="@null"
                    android:focusable="false"
                    android:hint="Select Channel"
                    android:textColor="#3B3B3B"
                    android:textColorHint="#3B3B3B"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/approved"
                    android:src="@drawable/seleditbg" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvSubChannel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Sub Channel"
                android:textColor="#9B9B9B"
                android:textSize="@dimen/text_size_normal"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <EditText
                    android:id="@+id/etSubChannel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-10dp"
                    android:layout_marginLeft="30dp"
                    android:background="@null"
                    android:focusable="false"
                    android:hint="Select Sub Channel"
                    android:textColor="#3B3B3B"
                    android:textColorHint="#3B3B3B"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/seleditbg" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Email Address"
                android:textColor="#9B9B9B"
                android:textSize="@dimen/text_size_normal"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@null"
                    android:hint="Enter Email Address"
                    android:inputType="textEmailAddress"
                    android:textColor="#3B3B3B"
                    android:textColorHint="#3B3B3B"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/edit_custominput" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvAddress1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Address Line 1"
                android:textColor="#9B9B9B"
                android:textSize="@dimen/text_size_normal"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <EditText
                    android:id="@+id/etAddress1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@null"
                    android:hint="Enter Address Line 1"
                    android:inputType="textCapSentences"
                    android:textColor="#3B3B3B"
                    android:textColorHint="#3B3B3B"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/edit_custominput" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvAddress2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Address Line 2"
                android:textColor="#9B9B9B"
                android:textSize="@dimen/text_size_normal"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <EditText
                    android:id="@+id/etAddress2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@null"
                    android:hint="Enter Address Line 2"
                    android:inputType="textCapSentences"
                    android:textColor="#3B3B3B"
                    android:textColorHint="#3B3B3B"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/edit_custominput" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="City"
                android:textColor="#9B9B9B"
                android:textSize="@dimen/text_size_normal"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <EditText
                    android:id="@+id/etCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@null"
                    android:hint="Enter City"
                    android:inputType="textCapSentences"
                    android:textColor="#3B3B3B"
                    android:textColorHint="#3B3B3B"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/edit_custominput" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvPoNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Po Number"
                android:textColor="#9B9B9B"
                android:textSize="@dimen/text_size_normal"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <EditText
                    android:id="@+id/etPoNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@null"
                    android:hint="Enter Po Number"
                    android:inputType="number"
                    android:textColor="#3B3B3B"
                    android:textColorHint="#3B3B3B"
                    android:textSize="@dimen/text_size_normal" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/edit_custominput" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_latlang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Latitude &amp; longitude"
                android:textColor="#9B9B9B"
                android:textSize="@dimen/text_size_normal" />

            <LinearLayout
                android:id="@+id/btnCaptureLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/et_Latlang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:background="@null"
                        android:hint="Capture Latitude and Longitude"
                        android:textColor="#3B3B3B"
                        android:textColorHint="#3B3B3B"
                        android:textSize="@dimen/text_size_normal" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:contentDescription="@string/approved"
                        android:src="@drawable/edit_custominput" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:contentDescription="@string/approved"
                    android:src="@drawable/gpsicon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCaptureFiles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvAddDoc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Add Documents"
                    android:textColor="#9B9B9B"
                    android:textSize="@dimen/text_size_normal" />

                <Button
                    android:id="@+id/btnAddDocuments"
                    style="@style/Btn_Green_wrap"
                    android:background="@drawable/adddoc"
                    android:textStyle="bold" />
            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/HsDocuments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp" >

                <LinearLayout
                    android:id="@+id/llDocuments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>