<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cell_bg"
        android:gravity="center_vertical"
        android:paddingTop="2dip" >

        <LinearLayout
            android:id="@+id/llClickToDownLoad"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dip"
            android:layout_marginBottom="2dip" >

            <TextView
                android:id="@+id/tvHeaderText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_size_small" />
            
            <TextView
                android:id="@+id/tvDiscountAplied"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small" 
                android:background="@drawable/discount"
                android:gravity="center_vertical"
                android:text="aa"
                android:paddingLeft="5dip"
                android:visibility="gone"
                android:paddingRight="10dip"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/evCases"
            android:layout_width="70dip"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:background="@drawable/unit_bg"
            android:ellipsize="end"
            android:gravity="center"
            android:hint="0"
            android:inputType="numberDecimal"
            android:maxLength="5"
            android:nextFocusDown="@+id/etInvoice2"
            android:numeric="decimal"
            android:singleLine="true"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0" >

            <TextView
                android:id="@+id/tvUnits"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="2dip"
                android:background="@drawable/unit_bg"
                android:ellipsize="end"
                android:gravity="center"
                android:hint="0"
                android:inputType="numberDecimal"
                android:maxLength="5"
                android:singleLine="true"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold"
                android:visibility="gone" />

            <EditText
                android:id="@+id/evUnits"
                android:layout_width="70dip"
                android:layout_height="fill_parent"
                android:background="@drawable/unit_bg"
                android:ellipsize="end"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:maxLength="5"
                android:singleLine="true"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />
        </FrameLayout>


        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/minus"
            android:inputType="number"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>